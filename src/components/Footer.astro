---
const socialLinks = [
  {
    name: 'GitHub',
    href: 'https://github.com/rhydlewis',
    icon: 'github',
  },
  {
    name: 'LinkedIn',
    href: 'https://www.linkedin.com/in/rhydianlewis/',
    icon: 'linkedin',
  },
  {
    name: 'Instagram',
    href: 'https://www.instagram.com/rhydlewis/',
    icon: 'instagram',
  },
  {
    name: 'Spotify',
    href: 'https://open.spotify.com/artist/6HdybP67Hqp9kLsZeXvdgY',
    icon: 'music',
  },
];

const currentYear = new Date().getFullYear();
