---
import { Image } from 'astro:assets';
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import rhydlewisImg from '../assets/images/rhydlewis.jpg';
import entmootImg from '../assets/images/entmoot.png';
---

<BaseLayout title="Music" description="Original compositions and musical projects by Rhyd Lewis.">
  <Header />

  <main class="flex-1">
    <div class="mx-auto max-w-4xl px-4 py-12 sm:px-6 sm:py-16">
      <header class="mb-12">
        <h1 class="font-heading text-display mb-4">Music</h1>
        <p class="text-xl text-text-muted dark:text-text-dark-muted">
          Original compositions and musical projects.
        </p>
      </header>

      <div class="space-y-8">
        <!-- Original Music Card -->
        <section class="rounded-2xl border border-border bg-muted p-6 sm:p-8 dark:border-border-dark dark:bg-muted-dark">
          <div class="flex items-center gap-4 mb-6">
            <Image
              src={rhydlewisImg}
              alt="Rhyd Lewis"
              width={64}
              height={64}
              class="w-16 h-16 rounded-full object-cover"
            />
            <div>
              <h2 class="font-heading text-2xl font-semibold">Rhyd Lewis</h2>
              <p class="text-text-muted dark:text-text-dark-muted">
                Original & cover songs
              </p>
            </div>
          </div>

          <div class="grid gap-6 lg:grid-cols-2">
            <!-- Spotify Embed -->
            <div>
              <h3 class="text-sm font-medium text-text-muted dark:text-text-dark-muted mb-3">
                Spotify
              </h3>
              <iframe
                style="border-radius:12px"
                src="https://open.spotify.com/embed/artist/4pIyMWReoHoNybLHAbzOGK?utm_source=generator&theme=0"
                width="100%"
                height="352"
                frameBorder="0"
                allowfullscreen=""
                allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
                loading="lazy"
              ></iframe>
            </div>

            <!-- Apple Music Embed -->
            <div>
              <h3 class="text-sm font-medium text-text-muted dark:text-text-dark-muted mb-3">
                Apple Music
              </h3>
              <iframe
                allow="autoplay *; encrypted-media *; fullscreen *; clipboard-write"
                frameborder="0"
                height="450"
                style="width:100%;overflow:hidden;border-radius:12px;"
                sandbox="allow-forms allow-popups allow-same-origin allow-scripts allow-storage-access-by-user-activation allow-top-navigation-by-user-activation"
                src="https://embed.music.apple.com/gb/artist/rhyd-lewis/1716733982"
                loading="lazy"
              ></iframe>
            </div>
          </div>
        </section>

        <!-- entMOOT Card -->
        <section class="rounded-2xl border border-border bg-muted p-6 sm:p-8 dark:border-border-dark dark:bg-muted-dark">
          <div class="flex items-center justify-between gap-4 mb-6">
            <div class="flex items-center gap-4">
              <Image
                src={entmootImg}
                alt="entMOOT"
                width={64}
                height={64}
                class="w-16 h-16 rounded-full object-cover"
              />
              <div>
                <h2 class="font-heading text-2xl font-semibold">entMOOT</h2>
                <p class="text-text-muted dark:text-text-dark-muted">
                  New Musical Works for Film and TV
                </p>
              </div>
            </div>
            <a
              href="https://entmootmusic.com"
              target="_blank"
              rel="noopener noreferrer"
              class="hidden sm:inline-flex items-center gap-2 rounded-full border border-border bg-surface px-4 py-2 text-sm font-medium text-text transition-colors hover:bg-muted dark:border-border-dark dark:bg-surface-dark dark:text-text-dark dark:hover:bg-muted-dark"
            >
              <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 0 0 8.716-6.747M12 21a9.004 9.004 0 0 1-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 0 1 7.843 4.582M12 3a8.997 8.997 0 0 0-7.843 4.582m15.686 0A11.953 11.953 0 0 1 12 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0 1 21 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0 1 12 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 0 1 3 12c0-1.605.42-3.113 1.157-4.418" />
              </svg>
              entmootmusic.com
            </a>
          </div>

          <!-- Mobile website link -->
          <a
            href="https://entmootmusic.com"
            target="_blank"
            rel="noopener noreferrer"
            class="sm:hidden inline-flex items-center gap-2 rounded-full border border-border bg-surface px-4 py-2 text-sm font-medium text-text transition-colors hover:bg-muted dark:border-border-dark dark:bg-surface-dark dark:text-text-dark dark:hover:bg-muted-dark mb-6"
          >
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 0 0 8.716-6.747M12 21a9.004 9.004 0 0 1-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 0 1 7.843 4.582M12 3a8.997 8.997 0 0 0-7.843 4.582m15.686 0A11.953 11.953 0 0 1 12 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0 1 21 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0 1 12 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 0 1 3 12c0-1.605.42-3.113 1.157-4.418" />
            </svg>
            entmootmusic.com
          </a>

          <div class="grid gap-6 lg:grid-cols-2">
            <!-- Spotify Embed -->
            <div>
              <h3 class="text-sm font-medium text-text-muted dark:text-text-dark-muted mb-3">
                Spotify
              </h3>
              <iframe
                style="border-radius:12px"
                src="https://open.spotify.com/embed/artist/6HdybP67Hqp9kLsZeXvdgY?utm_source=generator&theme=0"
                width="100%"
                height="352"
                frameBorder="0"
                allowfullscreen=""
                allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
                loading="lazy"
              ></iframe>
            </div>

            <!-- Apple Music Embed -->
            <div>
              <h3 class="text-sm font-medium text-text-muted dark:text-text-dark-muted mb-3">
                Apple Music
              </h3>
              <iframe
                allow="autoplay *; encrypted-media *; fullscreen *; clipboard-write"
                frameborder="0"
                height="450"
                style="width:100%;overflow:hidden;border-radius:12px;"
                sandbox="allow-forms allow-popups allow-same-origin allow-scripts allow-storage-access-by-user-activation allow-top-navigation-by-user-activation"
                src="https://embed.music.apple.com/gb/artist/entmoot/1669105995"
                loading="lazy"
              ></iframe>
            </div>
          </div>
        </section>
      </div>
    </div>
  </main>

  <Footer />
</BaseLayout>
